<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightBlueBackground">

    <LecturerView
        android:id="@id/LecturerView"
        android:layout_width="150pt"
        android:layout_height="50pt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/list_element">
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/empty_avatar" />

        <TextView
            android:id="@+id/lecturerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mgr. inÅ¼. Jan Kowalski"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/avatarImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatarImageView"
            app:layout_constraintTop_toTopOf="@+id/avatarImageView"
            app:layout_constraintVertical_bias="0.495" />
    </LecturerView>

    <TextView
        android:id="@+id/avaliabilityTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Now avaliable at: \n Building: B9 \n Room: 409"
        android:textAlignment="textStart"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/mapButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LecturerView" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        app:layout_constraintBottom_toBottomOf="@id/avaliabilityTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/avaliabilityTextView"
        app:layout_constraintTop_toTopOf="@+id/avaliabilityTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>

