<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundLight">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <ImageView
        android:id="@+id/profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:src="@drawable/empty_avatar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <Button
        android:id="@+id/profileButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/profileButton"
        android:textAlignment="center"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <Button
        android:id="@+id/foodButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/mapButton"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <Button
        android:id="@+id/lecturerButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/lecturerButton"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/lecturersButton"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <Button
        android:id="@+id/wikamp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/wikampButton"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <Button
        android:id="@+id/sett"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/settingsButton"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <Button
        android:id="@+id/creditsButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/creditsButton"
        android:textColor="@color/black" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <Button
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_background"
        android:text="@string/logoutButton"
        android:textColor="@color/black" />

</LinearLayout>
